{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@components/*": ["src/components/*"],
			"@models/*": ["src/models/*"],
			"@styles/*": ["src/styles/*"],

			"@components": ["src/components"],
			"@lib": ["src/lib"],
			"@utils": ["src/utils"],
			"@hooks": ["src/utils/hooks"],
			"@server": ["src/utils/server"],

			// "@utils/*": ["src/utils/*"],

			"@formats": ["src/utils/formats"],
			"@env": ["src/utils/server/env"],
			"@seo-default": ["src/next-seo.config"]
		},
		"outDir": "./dist",
		"target": "ES5",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"incremental": true,
		"lib": ["ES2019.Array", "DOM"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"module": "esnext",
		"moduleResolution": "node",
		"isolatedModules": true,
		"jsx": "preserve"
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules"]
}
