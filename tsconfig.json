{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@src/*": ["src/*"],
			"@lib/*": ["src/lib/*"],
			"@components/*": ["src/components/*"],
			"@models/*": ["src/models/*"],
			"@utils/*": ["src/utils/*"],
			"@styles/*": ["src/styles/*"]
		},
		"outDir": "./dist",
		"target": "ES5",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"incremental": true,
		"lib": ["ES2019.Array"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"module": "esnext",
		"moduleResolution": "node",
		"isolatedModules": true,
		"jsx": "preserve"
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules"]
}
